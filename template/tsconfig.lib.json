{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "moduleResolution": "node",
    "lib": ["es2015", "dom"],
    "module": "commonjs",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "types",
    "rootDir": "src",
    "sourceMap": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "include": [
    "src/lib"
  ],
  "exclude": [
    "acceptance-tests",
    "build",
    "jest",
    "lib",
    "node_modules",
    "scripts",
    "webpack"
  ]
}
